<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dburl</param-name>
        <!--<param-value>jdbc:derby:/Users/Luca/Documents/UNI/ProgrammazioneWeb/Foodie/FoodieDB;user=admin;password=password</param-value>-->
        <param-value>jdbc:derby:../../FoodieDB;user=admin;password=password</param-value>
    </context-param>
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>it.progettoweb.filters.SessionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticatedFilter</filter-name>
        <filter-class>it.progettoweb.filters.AuthenticatedFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GuestFilter</filter-name>
        <filter-class>it.progettoweb.filters.GuestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticatedFilter</filter-name>
        <url-pattern>/user.jsp</url-pattern>
        <url-pattern>/EditInfos</url-pattern>
        <url-pattern>/writeRev.jsp</url-pattern>
        <url-pattern>/StoreReview</url-pattern>
        <url-pattern>/ClaimRestaurant</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GuestFilter</filter-name>
        <url-pattern>/register.jsp</url-pattern>
        <url-pattern>/Register</url-pattern>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/pwdRecovery.jsp</url-pattern>
        <url-pattern>/pwdRecoverySender</url-pattern>
        <url-pattern>/pwdChange.jsp</url-pattern>
        <url-pattern>/pwdRecovery</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.progettoweb.listeners.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.progettoweb.logic.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.progettoweb.logic.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>it.progettoweb.logic.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountConfirm</servlet-name>
        <servlet-class>it.progettoweb.logic.AccountConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PwdRecovery</servlet-name>
        <servlet-class>it.progettoweb.logic.PwdRecovery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PwdRecoverySender</servlet-name>
        <servlet-class>it.progettoweb.logic.PwdRecoverySender</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditInfos</servlet-name>
        <servlet-class>it.progettoweb.logic.EditInfos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RetrieveRestaurant</servlet-name>
        <servlet-class>it.progettoweb.logic.RetrieveRestaurant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>it.progettoweb.logic.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreReview</servlet-name>
        <servlet-class>it.progettoweb.logic.StoreReview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClaimRestaurant</servlet-name>
        <servlet-class>it.progettoweb.logic.ClaimRestaurant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefreshNotifications</servlet-name>
        <servlet-class>it.progettoweb.logic.RefreshNotifications</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountConfirm</servlet-name>
        <url-pattern>/AccountConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PwdRecovery</servlet-name>
        <url-pattern>/PwdRecovery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PwdRecoverySender</servlet-name>
        <url-pattern>/PwdRecoverySender</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditInfos</servlet-name>
        <url-pattern>/EditInfos/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetrieveRestaurant</servlet-name>
        <url-pattern>/RetrieveRestaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreReview</servlet-name>
        <url-pattern>/StoreReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClaimRestaurant</servlet-name>
        <url-pattern>/ClaimRestaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefreshNotifications</servlet-name>
        <url-pattern>/RefreshNotifications</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
